<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title></title>
</head>
<body>
<div id="currentBookings">
    <span>Today's Bookings</span>
    <table border="1">
        <thead>
        <tr>
            <td>Sr No</td>
            <td>Room Name</td>
            <td>Team Name</td>
            <td>Start Time</td>
            <td>End Time</td>
        </tr>
        </thead>
        <tbody>
            #foreach($booking in $bookings)
            <tr>
                <td>$foreach.count</td>
                <td>$booking.room.roomName</td>
                <td>$booking.team.teamName</td>
                <td>$dateTools.format('dd-MM-yyyy h:mm a', $booking.startTime)</td>
                <td>$dateTools.format('dd-MM-yyyy h:mm a', $booking.endTime)</td>
            </tr>
            #end
        </tbody>
    </table>
</div>
<hr/>
<div id="newBooking">
    <span>New Booking</span>
    <form id="bookingForm" name="bookingForm" action="/book" method="post">
        <p>
            <label for="roomName">Select Room</label>
            <select name="roomName">
                #foreach($room in $rooms)
                <option value="$room">$room</option>
                #end
            </select>
        </p>
        <p>
            <label for="teamName">Select your team</label>
            <select name="teamName">
                #foreach($team in $teams)
                    <option value="$team">$team</option>
                #end
            </select>
        </p>
        <p>
            <label for="date">Date</label>
            <input type="text" name="dateText" value="$dateTools.get('dd-MM-yyyy')" disabled>
        </p>
        <p>
            <label for="startTime">Start Time (24 hrs format)</label>
            <select name="startTimeHours">
                #foreach($i in [0..23])
                    <option value="$i">$i</option>
                #end
            </select>
            <select name="startTimeMins">
                #foreach($i in [0..59])
                    <option value="$i">$i</option>
                #end
            </select>
        </p>
        <p>
            <label for="duration">Duration In minutes</label>
            <select name="duration">
                #foreach($mins in [15,30,45,60,90,120])
                    <option value="$mins">$mins</option>
                #end
            </select>
        </p>
        <p>
            <button type="submit">Book</button>
            <button type="reset">Cancel</button>
        </p>
    </form>
</div>
</body>
</html>